<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_img_china"
            android:layout_width="200dp"
            android:layout_height="130dp"
            />

        <ImageView
            android:id="@+id/iv_img_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lpanda_bottom_gra"
            android:layout_alignBottom="@+id/iv_img_china"

            />
        <ImageView
            android:id="@+id/iv_img_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_play_icon"
            android:layout_alignBottom="@+id/iv_img_china"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_smallTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fcf9f9"
            android:layout_alignBottom="@+id/iv_img_china"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="35dp"
            />
        <TextView
            android:id="@+id/tv_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="哈哈哈哈"
            android:layout_toRightOf="@+id/iv_img_china"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>
</LinearLayout>
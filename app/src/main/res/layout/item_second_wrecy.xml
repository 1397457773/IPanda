<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >
    <RelativeLayout
        android:id="@+id/rea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:layout_margin="8dp"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#0256ff"
            android:textSize="18dp"
            />
        <View
            android:layout_below="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#e2e2e2" />

        <ImageView
            android:id="@+id/iv_img_head"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_title"
            />

        <Button
            android:id="@+id/new_student"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="新生"
            android:background="#f4efef"
            android:textSize="20dp"
            android:textColor="#ff4002"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_img_head"
            />

        <Button
            android:id="@+id/instrest"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="趣闻"
            android:background="#f4efef"
            android:textSize="20dp"
            android:textColor="#ff4002"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_img_head"
            android:layout_below="@+id/new_student"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/new_student"
            android:layout_toEndOf="@+id/new_student" />
        <View
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_img_head"
            android:layout_below="@+id/new_student"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#e2e2e2" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/instrest"
            android:layout_toEndOf="@+id/instrest" />

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_img_live"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_panda_live"
        />
    <ImageView
        android:id="@+id/iv_img_bottom"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lpanda_bottom_gra"
        android:layout_alignBottom="@+id/iv_img_live"
        />
    <ImageView
        android:id="@+id/iv_img_layer"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/lpanda_live_layer"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/iv_img_bottom"
        />
    <TextView
        android:id="@+id/tv_Live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live"
        android:textSize="20dp"
        android:textColor="#f7f4f4"
        android:layout_alignBottom="@+id/iv_img_bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img_live"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
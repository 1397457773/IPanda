<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_cctv"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:src="@mipmap/ic_launcher"
        />
    <ImageView
        android:id="@+id/iv_img_bottom"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lpanda_bottom_gra"
        android:layout_alignBottom="@+id/iv_cctv"
        />
    <ImageView
        android:id="@+id/iv_img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_play_icon"
        android:layout_alignBottom="@+id/iv_img_bottom"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈哈"
        android:textSize="15dp"
        android:layout_below="@+id/iv_img_icon"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>